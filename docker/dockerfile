#Imagen
FROM python:3.8 

#Creaci贸n de directorio
RUN mkdir /app
#Establecemos el workdir
WORKDIR /app
#Copia de archivos locales a contenedor
COPY . /app/

#Instalaci贸n de requisitos de la aplicaci贸n
RUN pip install --no-cache-dir -r requirements.txt

#Variable de entorno
ENV FLASK_APP=app.py

#Puerto expuesto
EXPOSE 5000

#Entrypoint para CMD
ENTRYPOINT ["python"]

#Correr aplicaci贸n
CMD ["-m", "flask", "run", "--host", "0.0.0.0"]
